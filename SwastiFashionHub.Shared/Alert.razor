@namespace SwastiFashionHub.Shared

@if (Alerts != null && Alerts.Count > 0)
{
    try
    {
        foreach (var alert in Alerts)
        {
            if (alert != null)
            {
                <div class="frame-toast-manager">
                    <div class="@CssClass(alert)" id="sampleToast">
                        <span id="tost-content">
                            @alert.Message
                            @if (!string.IsNullOrWhiteSpace(alert.NavigationURL) && !string.IsNullOrWhiteSpace(alert.NavigationMessage))
                            {
                                <a @onclick="async () => await NavigationOnClick(alert.NavigationURL)" class="btn btn-link btn-primary-link text-white">@alert.NavigationMessage</a>
                            }
                        </span>
                        @if (string.IsNullOrWhiteSpace(alert.NavigationURL))
                        {
                            <button type="button" class="frame-toast-close" @onclick="@(() => RemoveAlert(alert))">
                                <span class="sr-only">Close Toast</span>
                                <span class="polaris-icon"><svg viewBox="0 0 20 20" focusable="false" aria-hidden="true"><path d="M11.414 10l6.293-6.293a.999.999 0 1 0-1.414-1.414L10 8.586 3.707 2.293a.999.999 0 1 0-1.414 1.414L8.586 10l-6.293 6.293a.999.999 0 1 0 1.414 1.414L10 11.414l6.293 6.293a.997.997 0 0 0 1.414 0 .999.999 0 0 0 0-1.414L11.414 10z" fill-rule="evenodd"></path></svg></span>
                            </button>
                        }
                    </div>
                </div>
            }
        }
    }
    catch (Exception ex)
    {
    }
}
